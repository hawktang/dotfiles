#!/bin/bash

set -eufo pipefail

formulae=(
  midnight-commander
  bat
  lsd
  fd
  ripgrep
  fzf
  starship
  tldr
  duf
  ncdu
  byobu
  zoxide
  rsync
  aria2
  httpie
  w3m
  git
  poetry
  p7zip
  atuin
  awscli
)
casks=(
	aerial
	clipy
	google-chrome
	kap
	iterm2
	visual-studio-code
  stats
)

